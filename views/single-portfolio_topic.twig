{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
			<a class="back-btn btn-left" href="{{ site.url }}#portfolio"><div class="circle"><img src="{{ site.url }}/wp-content/themes/portfolio-timber-v2/assets/icons/arrow-right-solid.svg" alt="back to main" class="back-icon" width="100" height="100"></div></a>
		<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">

			<section class="article-content">
				<h1 class="article-h1">{{ post.title }}</h1>
				<div class="article-body">
					{{post.content}}
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}
